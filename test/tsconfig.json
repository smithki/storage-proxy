{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}
